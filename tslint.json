{
  "extends": "tslint:recommended",
  "rulesDirectory": ["pages/", "components", "config"],
  "defaultSeverity": "error",
  "rules": {
    "typedef-whitespace": false,
    "no-duplicate-imports": true,
    "import-spacing": true,
    "no-var-keyword": true,
    "whitespace": true,
    "member-access": false,
    "one-line": false,
    "no-console": false,
    "no-debugger": false,
    "indent": [true, "spaces", 2],
    "quotemark": [true, "single", "jsx-double", "avoid-escape"],
    "semicolon": [true, "never", "ignore-interfaces"],
    "no-consecutive-blank-lines": [true, 3],
    "max-line-length": [true, 120],
    "linebreak-style": [true, "CR/LF"],
    "space-before-function-paren": [true, "asyncArrow"],
    "align": [true, "parameters", "arguments", "statements", "members", "elements"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "ignore",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": false
      }
    ]
  }
}
